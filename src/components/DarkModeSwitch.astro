---
import SunIcon from "./icons/SunIcon.astro"
import MoonIcon from "./icons/MoonIcon.astro"
---

<button
  id="dark-mode-toggle"
  class="dark-mode-toggle"
  aria-label="Toggle dark mode"
>
  <div class="icon-container">
    <SunIcon class="icon sun-icon" />
    <MoonIcon class="icon moon-icon" />
  </div>
</button>

<style>
  .dark-mode-toggle {
    background: none;
    border: none;
    cursor: pointer;
    width: 44px;
    height: 44px;
    padding: 10px;
    border-radius: 50%;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .dark-mode-toggle:hover {
    background-color: rgba(103, 114, 229, 0.1);
    transform: scale(1.1);
  }

  .icon-container {
    width: 24px;
    height: 24px;
    position: relative;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .icon {
    width: 24px;
    height: 24px;
    position: absolute;
    top: 0;
    left: 0;
    transition:
      opacity 0.3s ease,
      transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Default state (Light Mode) */
  .sun-icon {
    opacity: 1;
    transform: rotate(0deg);
  }
  .moon-icon {
    opacity: 0;
    transform: rotate(90deg);
  }

  /* Dark Mode State via global class on html */
  :global(.dark) .sun-icon {
    opacity: 0;
    transform: rotate(-90deg);
  }
  :global(.dark) .moon-icon {
    opacity: 1;
    transform: rotate(0deg);
  }

  :global(.dark) .dark-mode-toggle:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  :global(.dark) .icon-container {
    transform: rotate(180deg);
  }
</style>

<script>
  const button = document.getElementById("dark-mode-toggle")

  if (button) {
    button.addEventListener("click", () => {
      // @ts-ignore
      const currentTheme = window.__theme
      const newTheme = currentTheme === "dark" ? "light" : "dark"

      // @ts-ignore
      window.__setPreferredTheme(newTheme)
    })
  }
</script>
